<div class="conteudo-formulario-login bg-branco">

    <div class="conteudo-form">
    <header>
        <nav>
            <ul class="nav-links">
                <li><a href="">To do List Now</a></li>
            </ul>
        </nav>
    </header>
        <section class="caixa-formulario">
           <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
              </div>

              <div class="field">
                <%= f.label :"Senha" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>Caracteres m√≠nimos)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
              </div>

              <div class="field">
                <%= f.label :"Confirme a Senha" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
              </div>

              <div class="actions">
                <%= f.submit "Cadastrar", class: "btn-form btn-azul" %>
              </div>
            <% end %>

        </section>

        <footer class="rodape">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1340 320">
