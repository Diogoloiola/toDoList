
   <div class="conteudo">
        <header>
            <nav>
                <ul class="nav-links1">
                    <li class="cor-branca"><a href="#">To do List Now</a></li>
                    <li class="config-link-nav">
                        <a id="hora" href="#"></a>
                    </li>
                </ul>
            </nav>
        </header>
        <section class="links">
            <div>
                <ul class="nav-links2 bg-branco">
                    <li class="borda-direita link-ativo"> <a class="cor-preta" href="">Tarefas</a></li>
                   <li class="borda-direita">
                        <%= link_to 'Kanban', kanban_index_path, class: "cor-preta" %>
                    </li>
                    <li class="borda-direita">
                        <%= link_to 'Cadastrar Atividade', new_atividade_path, class: "cor-preta" %>
                    </li>
                    <li class="borda-direita">
                      <%= link_to "Sair",  destroy_usuario_session_path,class: "cor-preta" ,method: :delete%>
                    </li>
                </ul>
            </div>
        </section>
        <section class="tarefas">
            <table class="tabela">
              <thead>
                <tr>
                  <th>Nome Atividade</th>
                  <th>Data Criacao</th>
                  <th>Criada por</th>
                  <th>Pessoa Responsavel</th>
                  <th>Estado</th>
                  <th>Id Usuario</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @atividades.each do |atividade| %>
                  <tr>
                  <% if atividade.usuario == current_usuario %>
                                     
                        <td><%= atividade.nomeAtividade %></td>
                        <td><%= atividade.created_at %></td>
                        <td><%= atividade.criadaPor %></td>
                        <td><%= atividade.pessoaResponsavel %></td>
                        <% if atividade.estado == 0 %>
                            <td>Para fazer</td>
                        <% else %>
                            <% if  atividade.estado == 1 %>
                                <td>Em andamento</td>
                            <% else %>
                                <td>Feita</td>
                            <% end %>
                        <% end %>
                        <td><%= atividade.usuario_id %></td>
                        <td><%= link_to 'Show', atividade %></td>
                        <td><%= link_to 'Edit', edit_atividade_path(atividade) %></td>
                        <td><%= link_to 'Destroy', atividade, method: :delete, data: { confirm: 'Are you sure?' } %></td>

                     <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </section>
        <section>
            <div id="overlay">
                <div class="conteudo-atividade" style="display: flex !important;">
                    <span onclick="fechar()" id="close-overlay">&times</span>
                    <div class="lado-esquerdo">
                        <h3>Nome da Atividade</h3>
                        <p>
                            Lorem ipsum dolor sit amet consectetur adipisicing elit. Vero minus beatae itaque assumenda totam asperiores unde, voluptatem sapiente ducimus ratione ut ex tenetur, laudantium, veniam reprehenderit voluptates vitae harum. Libero?
                        </p>
                    </div>
                    <div class="lado-direito">
                        <div class="titulo-overlay">
                            <h3>Detalhes</h3>
                        </div>
                        <div class="conteudo-overlay">
                            <ul class="link-overlay">
                                <li><span class="span-overlay">Criada em:</span> 19/12/2020</li>
                                <li><span class="span-overlay">Criada por:</span>Diogo</li>
                                <li><span class="span-overlay">Pessoa responsavel</span> Diogo</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
