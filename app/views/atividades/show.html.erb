                    </li>
                    <li class="borda-direita">
                      <%= link_to 'Cadastrar Atividade', new_atividade_path, class: "cor-preta" %>
                    </li>
                </ul>
            </div>
        </section>
        <section class="">
           <div class="conteudo-atividade" style="display: flex !important;">
                    <div class="lado-esquerdo">
                        <h3> <%= @atividade.nomeAtividade %></h3>
                        <p>
                            <%= @atividade.conteudoAtividade %>
                        </p>
                    </div>
                    <div class="lado-direito">
                        <div class="titulo-overlay">
                            <h3>Detalhes</h3>
                        </div>
