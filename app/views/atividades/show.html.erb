                    <li class="config-link-nav">
                        <a id="hora" href="#"></a>
                    </li>
                    <li class=""><a href="#">Usuario 01</a></li>
                </ul>
            </nav>
        </header>
        <section class="links">
            <div>
                <ul class="nav-links2 bg-branco">
                    <li class="borda-direita">
                      <%= link_to 'Tarefas', atividades_path, class: "cor-preta" %>
                    </li>
                    <li class="borda-direita">
